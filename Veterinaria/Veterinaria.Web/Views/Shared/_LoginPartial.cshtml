@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink(User.Identity.GetUserName() + " - ", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage",@class="text-warning" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()" class="text-warning"> <i class="fas fa-sign-out-alt"></i> Cerrar Sesión</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Registro", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink",@class="text-warning btn btn-sm" })</li>
        <li>@Html.ActionLink("Inicio de Sesion", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "text-warning btn btn-sm" })</li>
    </ul>
}
